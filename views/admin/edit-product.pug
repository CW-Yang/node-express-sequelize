extends ../layouts/head.pug
block styles 
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")
block content 
  main 
    form.product-form(action=`/admin/${isEdit ? 'edit-product' : 'add-product'}`, method="POST")
      .form-control 
        label(for="title") Title 
        input(type="text", name="title", id="title", value=`${isEdit ? product.title : ''}`) 
      .form-control 
        label(for="imageUrl") Image URL 
        input(type="text", name="imageUrl", id="imageUrl", value=`${isEdit ? product.imageUrl : ''}`)
      .form-control 
        label(for="price") Price 
        input(type="number", step="0.01", name="price", id="price", value=`${isEdit ? product.price : ''}`)  
      .form-control 
        label(for="description") Description 
        input(type="text", name="description", id="description", value=`${isEdit ? product.description : ''}`)
      if isEdit 
        input(type="hidden", value=`${product.id}`, name="productId", id="productId")       
      button.btn(type="submit") #{isEdit ? 'Update Product' : 'Add Product'} 

    